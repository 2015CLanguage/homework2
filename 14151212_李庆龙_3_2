# include<stdio.h>
# include<math.h>
int main()
{
	printf("第一种存款方式本息和为：%.3f\n",1000*(1+0.00585));
	printf("第二种存款方式本息和为：%.3f\n",1000*(1+0.0468)*(1+0.054));
	printf("第三种存款方式本息和为：%.3f\n",1000*(1+0.054)*(1+0.0468));
	printf("第四种存款方式本息和为：%.3f\n",1000*pow(1+0.0414,5));
	printf("第五种存款方式本息和为：%.3f\n",1000*pow(1+0.0072/4,20));
	return 0;
}
