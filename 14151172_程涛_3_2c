#include <stdio.h>
#include <math.h>
void main()
{
	double a=1000,p1,p2,p3,p4,p5;
	p1=a*(1+5*0.0585);
	p2=a*(1+2*0.0468)*(1+3*0.054);
	p3=a*(1+3*0.054)*(1+2*0.0468);
    p4=a*(1+0.0414)*(1+0.0414)*(1+0.0414)*(1+0.0414)*(1+0.0414);
	p5=a*pow((1+0.0072/4),20);
	printf("五种存款方式的本息和分别为\n%f\n%f\n%f\n%f\n%f\n",p1,p2,p3,p4,p5);
}
